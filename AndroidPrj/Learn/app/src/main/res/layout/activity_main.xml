<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tmpView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="25dp"
        android:gravity="right|bottom"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="3"
        android:text="0"
        android:textSize="60dp"
        android:textColor="#000000"
        android:gravity="right"
        android:padding="10dp"
        android:background="#cccccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CE"
            android:textSize="30sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="30sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="bs"
            android:textSize="30sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="30sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >
        <Button
            android:id="@+id/n7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>

        <Button
            android:id="@+id/n8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/n9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >
        <Button
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>

        <Button
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/n6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >
        <Button
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>

        <Button
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="30sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/reverse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textSize="30sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#ebebeb"/>
        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="30sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30sp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>